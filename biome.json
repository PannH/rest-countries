{
   "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
   "organizeImports": {
      "enabled": true
   },
   "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentWidth": 3,
      "indentStyle": "space"
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single",
         "trailingComma": "none",
         "semicolons": "always",
         "arrowParentheses": "always"
      }
   },
   "json": {
      "parser": {
         "allowComments": false,
         "allowTrailingCommas": false
      },
      "formatter": {
         "trailingCommas": "none"
      }
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "suspicious": {
            "noExplicitAny": "off"
         },
         "complexity": {
            "noStaticOnlyClass": "off"
         }
      }
   }
}
